<div class="heading">
    @*<a href="#" class="back-link" data-bind="click: $root.navigateToCrashType, tooltip: { title: 'Вернуться назад', placement: 'bottom', trigger: 'hover' }"><i class="fa fa-arrow-circle-left"></i></a>*@
    <div class="col-md-offset-2">
        <h2>Профиль пользователя</h2>
        <a class="create-link btn btn-primary btn-circle" href="/#task/create" data-bind="tooltip: { title: 'Загрузить фото', placement: 'right', trigger: 'hover' }"><i class="fa fa-file-image-o" aria-hidden="true"></i></a>
    </div>
</div>
<form class="form-horizontal">
    <div class="form-group">
        <label for="lastName" class="col-sm-4 control-label">Фамилия</label>
        <div class="col-sm-10">
            <input class="form-control" id="lastName" data-bind="value: lastName">
        </div>
    </div>
    <div class="form-group">
        <label for="firstName" class="col-sm-4 control-label">Имя</label>
        <div class="col-sm-10">
            <input class="form-control" id="firstName" data-bind="value: firstName">
        </div>
    </div>
    <div class="form-group">
        <label for="middleName" class="col-sm-4 control-label">Отчестсво</label>
        <div class="col-sm-10">
            <input class="form-control" id="middleName" data-bind="value: middleName">
        </div>
    </div>
    <div class="form-group">
        <label for="birthday" class="col-sm-4 control-label">Дата рождения</label>
        <div class="col-sm-10">
            <div class='input-group date'>
                <input type='text' id='birthday' class="form-control" data-bind="datepicker: birthday, datepickerOptions : { locale: 'ru', format: 'DD.MM.YYYY' }" />
                <span class="input-group-addon">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-10">
            <button type="submit" class="btn btn-primary" data-bind="click: save"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Сохранить</button>
        </div>
    </div>
</form>
